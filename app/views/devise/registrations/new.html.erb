<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">

    <!-- Error Messages -->
    <% if resource.errors.any? %>
      <div class="backdrop-blur-sm bg-red-500/20 border border-red-400/30 rounded-2xl p-4 shadow-xl">
        <div class="flex items-start space-x-2">
          <span class="text-red-400 text-xl">❌</span>
          <div>
            <p class="text-red-100 font-medium mb-2">エラーが発生しました：</p>
            <ul class="text-red-200 text-sm space-y-1">
              <% resource.errors.full_messages.each do |msg| %>
                <li class="flex items-center space-x-2">
                  <span class="w-1 h-1 bg-red-400 rounded-full"></span>
                  <span><%= msg %></span>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Registration Form -->
    <div class="backdrop-blur-lg bg-white/10 border border-white/20 rounded-3xl p-8 shadow-2xl">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-transparent bg-gradient-to-r from-pink-400 to-violet-400 bg-clip-text">
          👤 新規登録
        </h2>
        <p class="mt-2 text-gray-300">アカウントを作成して始めましょう</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="space-y-6">
          <div>
            <%= f.label :name, "👤 ユーザー名", class: "block text-sm font-medium text-gray-200 mb-2" %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true, 
                class: "w-full px-4 py-3 backdrop-blur-sm bg-white/10 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-pink-400 focus:border-transparent transition-all duration-200",
                placeholder: "あなたの名前" %>
          </div>

          <div>
            <%= f.label :email, "📧 メールアドレス", class: "block text-sm font-medium text-gray-200 mb-2" %>
            <%= f.email_field :email, autocomplete: "email", required: true, 
                class: "w-full px-4 py-3 backdrop-blur-sm bg-white/10 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-pink-400 focus:border-transparent transition-all duration-200",
                placeholder: "your@email.com" %>
          </div>

          <div>
            <%= f.label :password, "🔒 パスワード（6文字以上）", class: "block text-sm font-medium text-gray-200 mb-2" %>
            <%= f.password_field :password, autocomplete: "new-password", required: true, 
                class: "w-full px-4 py-3 backdrop-blur-sm bg-white/10 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-pink-400 focus:border-transparent transition-all duration-200",
                placeholder: "6文字以上のパスワード" %>
          </div>

          <div>
            <%= f.label :password_confirmation, "🔐 パスワード確認", class: "block text-sm font-medium text-gray-200 mb-2" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, 
                class: "w-full px-4 py-3 backdrop-blur-sm bg-white/10 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-pink-400 focus:border-transparent transition-all duration-200",
                placeholder: "パスワードを再入力" %>
          </div>

          <div>
            <%= f.submit "登録", class: "w-full py-4 bg-gradient-to-r from-pink-500 to-violet-500 text-white rounded-xl font-bold text-lg shadow-xl hover:from-pink-400 hover:to-violet-400 hover:scale-105 hover:shadow-pink-500/25 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-pink-400 focus:ring-offset-2 focus:ring-offset-transparent" %>
          </div>
        </div>
      <% end %>

      <div class="mt-8 text-center">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-white/20"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-gradient-to-r from-slate-900 via-purple-900 to-slate-900 text-gray-400">または</span>
          </div>
        </div>
        
        <p class="mt-6 text-gray-300">
          すでにアカウントをお持ちですか？
        </p>
        <%= link_to new_session_path(resource_name), class: "inline-flex items-center mt-3 px-6 py-3 backdrop-blur-sm bg-white/10 border border-white/20 text-white rounded-xl font-medium hover:bg-white/20 hover:scale-105 transition-all duration-300" do %>
          <span class="mr-2">🔑</span>
          ログイン
        <% end %>
      </div>
    </div>
  </div>
</div>
