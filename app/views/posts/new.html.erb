<h1 class="text-xl font-bold mb-4">新規投稿</h1>
<%= form_with(model: @post, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :body, "内容", class: "block font-semibold mb-1" %>
    <%= form.text_area :body, rows: 6, class: "w-full p-2 border rounded" %>
  </div>
  <%= form.hidden_field :sake_log_id %>
  <div class="mb-4">
    <%= form.submit "投稿する", class: "px-4 py-2 bg-yellow-600 text-white rounded hover:bg-yellow-700" %>
    <%= link_to '戻る', posts_path, class: 'ml-4 text-yellow-700 underline' %>
  </div>
<% end %>
