<h1 class="text-3xl font-extrabold mb-8 text-pink-600 tracking-wide text-center" style="font-family:sans-serif; letter-spacing:0.1em;">掲示板フィード</h1>
<div class="flex flex-col items-center mb-6">
  <%= form_with url: posts_path, method: :get, local: true, class: "flex gap-2 mb-2" do |f| %>
    <%= f.label :q, "キーワード検索", class: "font-bold text-pink-600" %>
    <%= f.text_field :q, value: params[:q], class: "border rounded px-2 py-1 w-64" %>
    <%= f.submit "検索", class: "ml-4 px-4 py-1 bg-pink-500 text-white rounded-full font-bold" %>
    <% if params[:q].present? %>
      <%= link_to 'クリア', posts_path, class: 'ml-2 text-pink-500 underline' %>
    <% end %>
  <% end %>
</div>

<div class="flex justify-center mb-6">
  <%= link_to '記録一覧から新規投稿', sake_logs_path, class: 'inline-block px-6 py-2 bg-gradient-to-r from-pink-500 to-yellow-400 text-white rounded-full shadow hover:from-pink-400 hover:to-yellow-300 font-bold tracking-widest' %>
</div>

<div class="max-w-6xl mx-auto p-2">
  <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
    <% @posts.each do |post| %>
      <li class="bg-white border border-pink-200 rounded-2xl shadow-lg p-0 flex flex-col">
        <div class="flex items-center gap-3 px-5 pt-5 pb-2">
          <div class="w-12 h-12 rounded-full bg-gradient-to-tr from-pink-400 to-yellow-300 flex items-center justify-center text-2xl text-white font-bold shadow">
            <%= (post.user.name.presence || 'U').first %>
          </div>
          <div>
            <div class="font-bold text-pink-600"><%= post.user.name if post.user %></div>
            <div class="text-xs text-gray-400">@user<%= post.user_id %>・<%= l(post.created_at, format: :short) %></div>
          </div>
        </div>
        <div class="px-5 pb-4">
          <div class="text-gray-800 whitespace-pre-line mb-2 text-lg" style="font-family:sans-serif;">
            <span class="font-bold text-pink-600">銘柄：</span><%= post.brand %><br>
            <span class="font-bold text-pink-600">味：</span><%= post.taste %><br>
            <span class="font-bold text-pink-600">メモ：</span><%= truncate(post.memo, length: 100) %>
          </div>
          <%# 「元の記録を見る」リンク削除 %>
          <div class="flex gap-4 mt-2 items-center">
            <%= link_to '詳細', post_path(post), class: 'px-4 py-1 bg-gradient-to-r from-pink-500 to-yellow-400 text-white rounded-full hover:from-pink-400 hover:to-yellow-300 font-bold text-sm shadow' %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
