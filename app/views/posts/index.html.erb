<h1 class="text-2xl font-bold mb-4">掲示板</h1>
<%= link_to '新規投稿', new_post_path, class: 'mb-4 inline-block px-4 py-2 bg-yellow-600 text-white rounded hover:bg-yellow-700' %>
<ul class="space-y-4 mt-4">
  <% @posts.each do |post| %>
    <li class="bg-gray-100 p-4 rounded shadow">
      <div class="text-gray-800 whitespace-pre-line"><%= truncate(post.body, length: 100) %></div>
      <div class="text-sm text-gray-500 mt-2">
        投稿者: <%= post.user.nickname if post.user %> ／ <%= l(post.created_at, format: :short) %>
        <% if post.sake_log %>
          ／ <%= link_to '元の記録を見る', sake_log_path(post.sake_log), class: 'text-blue-600 underline' %>
        <% end %>
      </div>
      <%= link_to '詳細', post_path(post), class: 'text-yellow-700 underline ml-2' %>
    </li>
  <% end %>
</ul>
