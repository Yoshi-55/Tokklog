<div class="space-y-4 text-white">
  <%# 銘柄 %>
  <div class="space-y-2">
    <div class="flex items-center space-x-2">
      <span class="text-yellow-400 text-lg">🍶</span>
      <strong class="text-yellow-300 font-medium text-sm">銘柄</strong>
    </div>
    <div class="text-white font-bold text-lg leading-tight">
      <%= sake_log.name %>
    </div>
  </div>

  <%# レーダーチャート %>
  <div class="space-y-3">
    <div class="flex items-center space-x-2">
      <span class="text-green-400 text-lg">📊</span>
      <strong class="text-green-300 font-medium text-sm">味覚評価</strong>
    </div>
    <div class="relative h-48 w-full bg-slate-800/30 rounded-lg border border-slate-700/50 p-4">
      <canvas id="radar-<%= sake_log.id %>" 
              class="radar-chart w-full h-full" 
              data-chart-data="<%= sake_log.radar_values.to_json %>">
      </canvas>
    </div>
  </div>

  <%# 味 %>
  <div class="space-y-2">
    <div class="flex items-center space-x-2">
      <span class="text-purple-400 text-lg">👅</span>
      <strong class="text-purple-300 font-medium text-sm">味</strong>
    </div>
    <div class="text-gray-200 font-medium">
      <%= sake_log.taste %>
    </div>
  </div>

  <%# メモ %>
  <div class="space-y-2">
    <div class="flex items-center space-x-2">
      <span class="text-emerald-400 text-lg">📝</span>
      <strong class="text-emerald-300 font-medium text-sm">メモ</strong>
    </div>
    <div class="text-gray-300 text-sm leading-relaxed line-clamp-3">
      <%= sake_log.memo %>
    </div>
  </div>
</div>
