<%= form_with(model: sake_log, class: "contents max-w-lg mx-auto px-4 sm:px-6") do |form| %>
  <% if sake_log.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-600 px-4 py-3 font-semibold rounded-md mt-3 shadow-sm">
      <h2 class="text-lg mb-2"><%= pluralize(sake_log.errors.count, "error") %> prohibited this sake_log from being saved:</h2>

      <ul class="list-disc ml-6 space-y-1">
        <% sake_log.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :銘柄, class: "block font-semibold mb-1 text-gray-50" %>
    <%= form.text_field :name, class: ["bg-gray-300 block shadow-sm rounded-md border outline-none px-3 py-3 w-full text-base", {"border-gray-300 focus:border-blue-600 focus:ring-1 focus:ring-blue-600": sake_log.errors[:name].none?, "border-red-400 focus:border-red-600 focus:ring-1 focus:ring-red-600": sake_log.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :味, class: "block font-semibold mb-1 text-gray-50" %>
    <%= form.text_field :taste, class: ["bg-gray-400 block shadow-sm rounded-md border outline-none px-3 py-3 w-full text-base", {"border-gray-300 focus:border-blue-600 focus:ring-1 focus:ring-blue-600": sake_log.errors[:taste].none?, "border-red-400 focus:border-red-600 focus:ring-1 focus:ring-red-600": sake_log.errors[:taste].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :メモ, class: "block font-semibold mb-1 text-gray-50" %>
    <%= form.textarea :memo, rows: 4, class: ["bg-gray-500 block shadow-sm rounded-md border outline-none px-3 py-3 w-full text-base", {"border-gray-300 focus:border-blue-600 focus:ring-1 focus:ring-blue-600": sake_log.errors[:memo].none?, "border-red-400 focus:border-red-600 focus:ring-1 focus:ring-red-600": sake_log.errors[:memo].any?}] %>
  </div>

  <div class="text-center">
    <%= form.submit "保存", class: "rounded-md px-6 py-3 bg-yellow-600 hover:bg-yellow-500 text-white font-semibold cursor-pointer w-full sm:w-auto" %>
  </div>
<% end %>
