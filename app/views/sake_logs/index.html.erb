<% content_for :title, "一覧" %>

<div class="w-full px-4 sm:px-6">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <div class="flex items-center gap-4 mb-6">
    <h1 class="font-bold text-2xl sm:text-4xl text-gray-50">記録一覧</h1>
    <%= link_to "＋ 新規作成", new_sake_log_path,
        class: "rounded-md px-4 py-2.5 bg-yellow-600 hover:bg-yellow-500 text-white font-medium" %>
  </div>

  <% if @sake_logs.any? %>
    <div id="sake_logs" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      <% @sake_logs.each do |sake_log| %>
        <div class="border border-gray-200 rounded-xl shadow-md bg-gray-800 transition-transform hover:scale-105 relative h-64 flex flex-col">
          <div class="p-6 flex-1 overflow-hidden">
            <%= render sake_log %>
          </div>
          <div class="p-4 flex gap-2">
            <%= link_to "詳細", sake_log,
                class: "flex-1 text-center rounded-md px-3 py-2 bg-gray-600 hover:bg-gray-500 text-gray-50 font-medium text-sm" %>
            <%= link_to "掲示板にシェア", new_post_path(sake_log_id: sake_log.id),
                class: "flex-1 text-center rounded-md px-3 py-2 bg-yellow-600 hover:bg-yellow-500 text-white font-medium text-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center my-10 text-gray-400">記録なし</p>
  <% end %>
</div>
